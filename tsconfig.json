{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "baseUrl": "./",
    "outDir": "./dist"
  },
  "include": ["src"],
  "exclude": ["node_modules", "tests"]
}
